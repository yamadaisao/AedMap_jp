<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/balloon_main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/balloon_overlay_bg_selector"
    android:minWidth="200dip"
    android:orientation="vertical"
    android:paddingBottom="25dip"
    android:paddingLeft="10dip"
    android:paddingRight="0dip"
    android:paddingTop="0dip" >

	<LinearLayout
	    android:id="@id/location_balloon_inner_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:orientation="horizontal">

		<TextView
		    android:id="@+id/balloon_item_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="balloon_item_title"
		    android:textColor="@android:color/primary_text_light"
		    android:textSize="16dip" android:layout_gravity="center_vertical"/>

		<ImageView
		    android:id="@id/location_balloon_close"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingBottom="10dip"
		    android:paddingLeft="10dip"
		    android:paddingRight="8dip"
		    android:paddingTop="8dip"
		    android:src="@drawable/balloon_overlay_close"/>

	</LinearLayout>

	<LinearLayout
	    android:id="@+id/linearLayout1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:orientation="vertical" android:paddingRight="10dip">

		<TextView
		    android:id="@+id/balloon_item_snippet"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="balloon_item_snippet"
		    android:textColor="@android:color/secondary_text_light"
		    android:textSize="12dip" />

		<TextView
		    android:id="@+id/balloon_item_able"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="balloon_item_able"
		    android:textColor="@android:color/secondary_text_light"
		    android:textSize="12dip" />

		<TextView
		    android:id="@+id/balloon_item_src"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="balloon_item_src"
		    android:textColor="@android:color/secondary_text_light"
		    android:textSize="12dip" />

		<TextView
		    android:id="@+id/balloon_item_spl"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="balloon_item_spl"
		    android:textColor="@android:color/secondary_text_light"
		    android:textSize="12dip" />

	</LinearLayout>

</LinearLayout>
